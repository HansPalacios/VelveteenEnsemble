    <!-- <input type='select_date' id='event_date' value='<%=@event_date%>' name='date' /> -->
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :event_location, :input_html => { :value =>  @location } %>

    <!-- <input type='text' id='event_location' value='<%=@location%>' name='location' /> -->
  </div>

  <div class="field padright">
    <%= form.label :type, "Event Type" %>
    <%= form.select :type, options_for_select(["Wedding","Corporate Event", "Concert", "Recording", "Other"]), :prompt => 'Select one', :id => "event_type", required: false  %>

   <br>
    <%= form.text_field :type, :id => "other_newevent_type", :placeholder => "Other event type", :style => "display: none", required: false  %>
  </div>

  <div class="field">
    <%= form.label :length %>
