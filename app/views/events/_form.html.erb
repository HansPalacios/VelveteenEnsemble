    <%= form.label :date %>
    <%= form.date_select :date, id: :event_date %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :event_location %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.text_field :type, id: :event_type %>
  </div>

  <div class="field">
    <%= form.label :length %>
    <%= form.text_field :length, id: :event_length %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount, id: :event_amount %>
  </div>

  <div class="field">
    <%= form.label :deposit %>
    <%= form.number_field :deposit, id: :event_deposit %>
  </div>

  <div class="field">
    <%= form.label :subtotal %>
    <%= form.number_field :subtotal, id: :event_subtotal %>
  </div>

  <div class="field">
    <%= form.label :deposit_paid %>
    <%= form.check_box :deposit_paid, id: :event_deposit_paid %>
  </div>

  <div class="field">
    <%= form.label :total_paid %>
    <%= form.check_box :total_paid, id: :event_total_paid %>
