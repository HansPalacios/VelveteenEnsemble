<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Type</th>
      <th>Length</th>
      <th>Amount</th>
      <th>Deposit</th>
      <th>Subtotal</th>
      <th>Deposit paid</th>
      <th>Total paid</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.type %></td>
        <td><%= event.length %></td>
        <td><%= event.amount %></td>
        <td><%= event.deposit %></td>
        <td><%= event.subtotal %></td>
        <td><%= event.deposit_paid %></td>
        <td><%= event.total_paid %></td>
        <td><%= event.customer_id %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

