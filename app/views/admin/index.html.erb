<div class="container-fluid height" id="admin">
	<% unless admin_signed_in? %>
		<div class="background row">
			<div class="col-md-12">
				<h2>Admin Login</h2>
			</div>

			<div class="col-md-12">
				<%= form_for(:admin, :url => session_path(:admin)) do |f| %>
				  <div class="field">
				    <%= f.label :email %><br />
				    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
				  </div>

				  <div class="field">
				    <%= f.label :password %><br />
				    <%= f.password_field :password, autocomplete: "off" %>
				  </div>

				  <div class="field">
				    <%= f.check_box :remember_me %>
				    <%= f.label :remember_me %>
				  </div>

				  <div class="actions">
				    <%= f.submit "Log in" %>
				  </div>
				  <%= link_to "Forgot your password?", new_password_path(:admin) %>
				<% end %>
			</div>
		</div>
	<% else %>

	<% end %>
</div>