<%= form_for @contact do |f| %>
    <% if flash[:error].present? %>
        <p> flash[:error]</p>
    <% end %>
    <%= f.label :name, 'Name (required) *' %> 
    <%= f.text_field :name, required: true %>
    <br>
    <%= f.label :email, 'Email (required) *' %>
    <%= f.text_field :email, required: true %>
    <br>
    <%= f.label :email, 'Phone No.' %>
    <%= f.text_field :email, required: false %>
    <br>
    <div class="messagebox">
        <%= f.label :message, :class => "messagelabel" %>
        <%= f.text_area :message, as: :text %>
    </div>
  <div class="nickname">
    <%= f.label :nickname %> <br>
    <%= f.text_field :nickname, hint: 'leave this field blank' %>
  </div>

    <%= f.submit 'Send Message', :class => "button" %>
  <% end %>