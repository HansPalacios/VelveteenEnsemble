<%= form_for @contact do |f| %>
    <% if flash[:error].present? %>
    <p class="notice"><%= flash[:error] %></p>

    <% end %>
    <%= f.label :name, 'Name (required) *' %> 
    <%= f.text_field :name, required: true %>
    <br>
    <%= f.label :email, 'Email (required) *' %>
    <%= f.text_field :email, required: true %>
    <br>
    <%= f.label :phone, 'Phone No.' %>
    <%= f.telephone_field :phone, required: false %>
    <br>
    <%= f.label :eventdate, 'Event Date' %>
    <%= f.date_field :eventdate, required: false %>
    <br>
    <%= f.label :eventlocation, 'Event Location' %>
    <%= f.text_field :eventlocation, required: false %>
    <br>
    <%= f.label :length, "Event Length" %>
    <%= f.select :length, [ "1 hour","1.5 hours","2 hours", "2.5 hours", "3 hours", "3.5 hours", "4 hours", "Over 4 hours" ], :prompt => 'Select one' %>
    <br>

    <%= f.label :type, "Event Type" %>

   <%= f.select :type, ["Wedding","Corporate Event", "Concert","Recording","Other"], :prompt => 'Select one', :id => "type" %>

   <br>

   <div class="other" style="display: none">
        <%= f.label :type, "Other Event Type:"%>
        <%= f.text_field :type, label: "Other" %>
    </div>

    <br>
    <div class="messagebox">
        <%= f.label :message, :class => "messagelabel"%>
        <%= f.text_area :message, as: :text %>
    </div>

  <div class="nickname">
    <%= f.label :nickname %> <br>
    <%= f.text_field :nickname, hint: 'leave this field blank' %>
  </div>

    <%= f.submit 'Send Message', class: "button" %>
  <% end %>