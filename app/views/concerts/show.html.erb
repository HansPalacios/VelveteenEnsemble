<div class="row">
  
  <div class="col-sm-8 col-md-8">
    <div class="row right">
      <p><Strong><%= @concert.comp4name %></Strong></p>
    </div>
    <div class="row">
      <p><%= @concert.comp4bio %></p>
    </div>
    
  </div>
