    <div class="row">
      <p><%= @concert.comp2bio %></p>
    </div>
    
  </div>
  <div class="col-sm-4 col-md-4">
    <%=image_tag image_url("https://d3ffc7oj6uo4uj.cloudfront.net/ponce.jpeg")%>
